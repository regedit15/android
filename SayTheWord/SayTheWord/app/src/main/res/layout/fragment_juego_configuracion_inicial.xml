				<!--					android:layout_height="wrap_content"-->
				<!--					android:text="Español - Inglés" />-->
				<!--			</RadioGroup>-->
				<Switch
					android:id="@+id/swSoloPalabrasProblematicas"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="16dp"
					android:text="Solo palabras problemáticas"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toBottomOf="@+id/textEdit" />
			</androidx.constraintlayout.widget.ConstraintLayout>

			<com.google.android.material.button.MaterialButton
				android:id="@+id/btComenzarJuego"
				style="@style/Widget.MaterialComponents.Button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="32dp"
				android:text="Comenzar!"
				app:backgroundTint="#82B1FF"
